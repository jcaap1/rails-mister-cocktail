
<div class="banner">
  <div class="container">
    <h1>Cocktails <strong></strong>to <strong>chill</strong>!</h1>
    <p>Learn how to make the best cocktails</p>
  </div>


<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-3">
      <h2></h2>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_cocktail"></i>
            <% end %>
        <% end %>
      </ul>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
</div>
